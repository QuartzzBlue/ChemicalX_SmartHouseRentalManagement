<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingTop="15dp"
    android:paddingEnd="25dp"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/tv_unit_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="28sp"
        tools:text="해피하우스 104호" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_unit_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabIndicatorFullWidth="false"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextColor="@color/black">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/ti_unit_detail_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입금 내역" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/ti_unit_detail_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계약 정보" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/ti_unit_detail_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비고" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_unit_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>


</LinearLayout>

